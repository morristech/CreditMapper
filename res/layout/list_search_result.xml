<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/background_activited">
    
     <TextView
         	android:id="@+id/list_search_result_merchantInfo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/list_search_result_distance"
	        android:textSize="20sp"
	        android:textStyle="bold"/>
     
      <TextView
         	android:id="@+id/list_search_result_location"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/list_search_result_merchantInfo"
	        android:layout_toLeftOf="@+id/list_search_result_distance"
	        android:padding="2dp"/>
      
      <TextView
         	android:id="@+id/list_search_result_distance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:padding="2dp"/>
    

</RelativeLayout>
